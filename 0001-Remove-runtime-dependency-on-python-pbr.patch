From 9d9ce57d9e7c9d83fa0042d643e5fd112203b424 Mon Sep 17 00:00:00 2001
From: Jakub Ruzicka <jruzicka@redhat.com>
Date: Tue, 16 Jul 2013 18:09:30 +0200
Subject: [PATCH] Remove runtime dependency on python-pbr

---
 ceilometerclient/__init__.py |  8 +-------
 requirements.txt             |  7 -------
 setup.py                     |  1 -
 test-requirements.txt        | 13 -------------
 4 files changed, 1 insertion(+), 28 deletions(-)
 delete mode 100644 requirements.txt
 delete mode 100644 test-requirements.txt

diff --git a/ceilometerclient/__init__.py b/ceilometerclient/__init__.py
index d6efb69..b73e453 100644
--- a/ceilometerclient/__init__.py
+++ b/ceilometerclient/__init__.py
@@ -12,10 +12,4 @@
 
 __all__ = ['__version__']
 
-import pbr.version
-
-version_info = pbr.version.VersionInfo('python-ceilometerclient')
-try:
-    __version__ = version_info.version_string()
-except AttributeError:
-    __version__ = None
+__version__ = "REDHATCEILOMETERCLIENTVERSION"
diff --git a/requirements.txt b/requirements.txt
deleted file mode 100644
index 64d96fe..0000000
--- a/requirements.txt
+++ /dev/null
@@ -1,7 +0,0 @@
-pbr>=0.5.21,<1.0
-argparse
-httplib2
-iso8601>=0.1.8
-PrettyTable>=0.6,<0.8
-python-keystoneclient>=0.4.1
-six>=1.4.1
diff --git a/setup.py b/setup.py
index 70c2b3f..afab729 100644
--- a/setup.py
+++ b/setup.py
@@ -18,5 +18,4 @@
 import setuptools
 
 setuptools.setup(
-    setup_requires=['pbr'],
     pbr=True)
diff --git a/test-requirements.txt b/test-requirements.txt
deleted file mode 100644
index 20f1e8e..0000000
--- a/test-requirements.txt
+++ /dev/null
@@ -1,13 +0,0 @@
-# Install bounded pep8/pyflakes first, then let flake8 install
-pep8==1.4.5
-pyflakes>=0.7.2,<0.7.4
-flake8==2.0
-hacking>=0.8.0,<0.9
-coverage>=3.6
-discover
-fixtures>=0.3.14
-mock>=1.0
-python-subunit
-sphinx>=1.1.2
-testrepository>=0.0.17
-testtools>=0.9.32
